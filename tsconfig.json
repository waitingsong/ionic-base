{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "lib": [
      "es2017",
      "es2018",
      "dom"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/out-tsc",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules*",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
